<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:contentPadding="5dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/white">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        
        <LinearLayout
            android:id="@+id/lProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivProfilePhoto"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_person_dark"
                android:layout_width="45dp"
                android:layout_height="45dp" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tvName"
                    android:text="Name"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tvTimestamp"
                    android:text="33 min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/ivExtra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/ic_more_black"/>

        </LinearLayout>
        <ImageView
            android:id="@+id/ivPostPhoto"
            android:backgroundTint="@color/gray_light"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/white" />
        <TextView
            android:id="@+id/tvPostDescription"
            android:text="@string/the_description_of_the_post"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="all"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:id="@+id/ivRate1Posts"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_star_outline_dark"
                android:background="@color/white"
                android:drawablePadding="5dp"/>
            <ImageView
                android:id="@+id/ivRate2Posts"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_star_outline_dark"
                android:background="@color/white"
                android:drawablePadding="5dp"/>
            <ImageView
                android:id="@+id/ivRate3Posts"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_star_outline_dark"
                android:background="@color/white"
                android:drawablePadding="5dp"/>
            <ImageView
                android:id="@+id/ivRate4Posts"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_star_outline_dark"
                android:background="@color/white"
                android:drawablePadding="5dp"/>
            <ImageView
                android:id="@+id/ivRate5Posts"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_star_outline_dark"
                android:background="@color/white"
                android:drawablePadding="5dp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lRatesPosts"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ivAverageRate1Posts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_outline_dark"
                    android:background="@color/white"
                    android:drawablePadding="5dp"/>
                <ImageView
                    android:id="@+id/ivAverageRate2Posts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_outline_dark"
                    android:background="@color/white"
                    android:drawablePadding="5dp"/>
                <ImageView
                    android:id="@+id/ivAverageRate3Posts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_outline_dark"
                    android:background="@color/white"
                    android:drawablePadding="5dp"/>
                <ImageView
                    android:id="@+id/ivAverageRate4Posts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_outline_dark"
                    android:background="@color/white"
                    android:drawablePadding="5dp"/>
                <ImageView
                    android:id="@+id/ivAverageRate5Posts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_outline_dark"
                    android:background="@color/white"
                    android:drawablePadding="5dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tvRates"
                android:textColor="@color/green_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </LinearLayout>

            <ImageView
                android:id="@+id/btnComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_comment_black"
                android:background="@color/white"
                android:drawablePadding="5dp"/>
            <ImageView
                android:id="@+id/ivShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/btnComment"
                android:src="@drawable/ic_share_black"
                android:background="@color/white"
                android:drawablePadding="5dp"/>
            <TextView
                android:id="@+id/tvCountComments"
                android:layout_below="@id/btnComment"
                android:layout_alignParentEnd="true"
                android:textColor="@color/green_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>